<% @posts.reverse.each do |post| %>
<div class="panel">
	<div class="row panel-body">
		<div class= "col-md-3">
		</div>
		<div class = "col-md-3 text-right">
			<img class="img-rounded" src="<%= post.image_url(:thumb)%>">
		</div>
		<div class = "col-md-6">
			<h4><a href= "/gallery/show/<%= post.id %>"><%= post.title %></a>[<%=post.comments.count%>]</h4>
			<p><span class="label label-warning"><%= post.category %></span></p>
			<p><strong><%=post.user.username %></strong></p>
		</div>
	</div>
</div>
<% end %>
