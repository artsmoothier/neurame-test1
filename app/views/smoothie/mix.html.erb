<%= render	:partial => "layouts/smoothie_header"%>
<div class = "container" style = "align:right">
	<% if !flash[:alert].nil? %>
	<div class = "alert alert-danger">
		<%= flash[:alert]%>
	</div>
	<% end %>

	<div style = "width: 700px; align:left">
		<% @posts.reverse.each do |post| %>
		<div class = "panel">
			<div class = "row panel-body">
				<div class= "col-md-3">
				</div>
				<div class = "col-md-3 text-right">
					<img class="img-rounded" src="<%= post.image_url(:thumb)%>">
				</div>
				<div class = "col-md-6">
					<p><a href = "/gallery/show/<%= post.id%>"><strong>자세히보기</strong></p>
				</div>
			</div>
		</div>
		<% end %>
	</div>
</div>
